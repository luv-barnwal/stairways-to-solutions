<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffea"
    tools:context=".StoreActivity">

    <Button
        android:id="@+id/trade"
        android:layout_width="408dp"
        android:layout_height="60dp"
        android:layout_marginBottom="137dp"
        android:backgroundTint="#dbd800"
        android:gravity="center"
        android:text="Exchange Points to Coins"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/round_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trade" />

    <ImageView
        android:id="@+id/minus"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/round_corners"
        app:layout_constraintStart_toEndOf="@+id/numberofPoints"
        app:layout_constraintTop_toBottomOf="@+id/trade" />

    <TextView
        android:id="@+id/numberofPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="40dp"
        android:text="50"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/trade" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="257dp"
        android:text="Coins Received"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <TextView
        android:id="@+id/endamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="46dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/numberofPoints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="140dp"
        android:text="+"
        android:textColor="#FFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/numberofPoints"
        app:layout_constraintTop_toBottomOf="@+id/trade" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:text="-"
        android:textColor="#FFF"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/numberofPoints"
        app:layout_constraintTop_toBottomOf="@+id/trade" />

    <TextView
        android:id="@+id/subDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Select Your Preferred Plan from Below"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endamount" />

    <ListView
        android:id="@+id/subscriptionsListView"
        android:layout_width="0dp"
        android:layout_height="361dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>