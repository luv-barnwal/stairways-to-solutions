<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffea"
    tools:context=".AnswerQuestionActivity">

    <EditText android:background="@android:color/background_light" android:layout_height="430dp" android:layout_width="382dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.51" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:inputType="textPersonName" android:hint="Details of Your Answer" android:gravity="top" android:ems="10" android:layout_marginBottom="160dp" android:layout_marginEnd="16dp" android:layout_marginTop="70dp" android:layout_marginStart="16dp" android:id="@+id/totalquestion"/>

    <Spinner android:background="@android:drawable/btn_dropdown" android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="16dp" android:id="@+id/spinner1" app:layout_constraintTop_toBottomOf="@+id/totalquestion" android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/continues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#dbd800"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/totalquestion" />

    <Button
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:backgroundTint="#00fea6"
        android:text="Quit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attachments" />

    <ImageView android:layout_height="40dp" android:layout_width="50dp" android:layout_marginTop="11dp" android:id="@+id/imageView4" app:layout_constraintTop_toBottomOf="@+id/totalquestion" app:layout_constraintStart_toEndOf="@+id/spinner1" android:src="@drawable/attachments"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="629dp" android:id="@+id/attachments"/>

    <ImageView android:layout_height="50dp" android:layout_width="50dp" app:layout_constraintTop_toTopOf="@id/attachments" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="10dp" android:layout_marginTop="30dp" android:id="@+id/image1" android:src="@android:color/holo_blue_dark" app:layout_constraintBottom_toTopOf="@+id/quit" android:visibility="gone"/>

    <ImageView android:layout_height="50dp" android:layout_width="50dp" app:layout_constraintTop_toTopOf="@id/attachments" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.9" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="10dp" android:layout_marginTop="30dp" android:id="@+id/image2" android:src="@android:color/holo_blue_dark" app:layout_constraintBottom_toTopOf="@+id/quit" android:visibility="gone"/>

    <TextView android:layout_height="58dp" android:layout_width="233dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView" android:text="Answer a Question" app:layout_constraintBottom_toTopOf="@+id/totalquestion" android:textStyle="bold" android:textSize="27sp" android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>